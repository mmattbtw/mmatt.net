generator client {
  provider = "prisma-client-js"
  previewFeatures = ["dataProxy"]
  engineType = "dataproxy"
}

datasource db {
  provider = "postgresql"
  url      = env("prismaDev")
}

model posts {
  id       String @id @default(cuid())
  category String
  imageUrl String
  markdown String
  slug     String @unique
  title    String

  CreatedAt DateTime @default(now())
  UpdatedAt DateTime @updatedAt
}

model projects {
  id       String @id @default(cuid())
  category String
  imageUrl String
  markdown String
  slug     String @unique
  title    String
  status   String

  CreatedAt DateTime @default(now())
  UpdatedAt DateTime @updatedAt
}

model User {
  id             String @id
  username       String
  displayName    String
  profilePicture String

  comments comments[]

  CreatedAt DateTime @default(now())
  UpdatedAt DateTime @updatedAt
}

model comments {
  id String @id @default(cuid())

  parentPostId String

  content String
  userId  String  
  user    User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  CreatedAt DateTime @default(now())
  UpdatedAt DateTime @updatedAt
}
