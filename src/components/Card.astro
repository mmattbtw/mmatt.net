---
export interface Props {
  title: string;
  description: string;
  tags: string;
  link: string;
  imgUrl: string;
}

const { title, description, tags, link, imgUrl } = Astro.props as Props;
---

<a href={link}>
  <div class="group flex flex-col justify-items-center">
    <div
      class="flex flex-col backdrop-blur-lg dark:bg-black bg-white p-5 rounded-lg max-w-sm min-w-sm max-h-lg min-h-lg transition-all border dark:border-neutral-800 dark:hover:border-white/30 hover:border-black/30 hover:shadow-2xl dark:hover:shadow-white/30 hover:shadow-black/30"
    >
      <img src={imgUrl} alt={title} class="w-full h-auto pb-4" />

      <h1 class="text-2xl font-bold">{title}</h1>
      <p class="text-xs font-bold">{tags}</p>
      <hr class="border-neutral-600" />
      <p class="text-sm">{description}</p>
      <div
        class="text-xs text-neutral-700 dark:text-neutral-400 flex flex-row gap-1"
      >
      </div>
    </div>
    <div
      class="group-hover:animate-fadeInDown overflow-ellipsis backdrop-blur-lg group-hover:shadow-lg shadow-black dark:shadow-white bg-white/50 dark:bg-black/50 p-2 text-center rounded-md mt-5 -z-10 -translate-y-10 opacity-0 transition-all"
    >
      {link.replace("https://", "")}
      &rarr;
    </div>
  </div>
</a>
