---
export interface Props {
  title: string;
  description: string;
  tags: string;
  link: string;
  imgUrl: string;
}

const { title, description, tags, link, imgUrl } = Astro.props as Props;
---

<a href={link}>
  <div
    class="group flex flex-col backdrop-blur-lg bg-black/70 p-5 rounded-lg max-w-sm min-w-sm max-h-lg min-h-lg transition-all border border-neutral-800 hover:border-white/30 hover:shadow-2xl hover:shadow-white/30"
  >
    <img src={imgUrl} alt={title} class="w-full h-auto pb-4" />

    <h1 class="text-2xl font-bold">{title}</h1>
    <p class="text-xs font-bold">{tags}</p>
    <hr class="border-neutral-600" />
    <p class="text-sm">{description}</p>
    <div class="text-xs text-neutral-400 flex flex-row gap-1">
      <p
        class="overflow-ellipsis overflow-hidden group-hover:text-white transition-all"
      >
        {link}
      </p>
      <span class="group-hover:translate-x-1 transition-transform">
        &rarr;</span
      >
    </div>
  </div>
</a>
