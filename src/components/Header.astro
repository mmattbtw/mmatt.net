---
export interface Props {
  links: {
    title: string;
    href: string;
    active?: boolean;
  }[];
  disableHeaderOnScroll: boolean;
}

const textHover = `underline pl-2 pr-2 font-bold dark:hover:bg-white dark:hover:text-black transition-all md:text-lg text-xs`;

const props = Astro.props as Props;
---

<div
  class={(props.disableHeaderOnScroll ? `static` : `sticky`) +
    " " +
    "top-0 flex items-center justify-between flex-row p-5 backdrop-blur-sm w-full mb-10 z-10 max-h-16 transition-all bg-transparent"}
>
  <a href="/">
    <h1
      class="text-xl font-bold dark:hover:bg-white dark:hover:text-black transition-colors pl-2 pr-2"
    >
      mmatt
    </h1>
  </a>
  <div class="flex flex-row gap-2 md:gap-5 mr-5">
    {
      props.links.map((link) => (
        <a
          href={link.href}
          class={`${
            link.active && `dark:text-black dark:bg-white`
          } ${textHover}`}
        >
          {link.title}
        </a>
      ))
    }
  </div>
</div>
