<div
  id="lightModeDetection"
  class="dark:hidden animate-fadeInDown flex gap-2 flex-col md:flex-row ml-auto mr-auto bg-neutral-500/50 sticky top-5 max-w-lg z-50 backdrop-blur-lg text-lg text-red-400 p-4 text-center transition-all"
>
  <p>
    Your device is in Light Mode, which is currently not supported by this
    website.
  </p>
  <button
    class="font-bold"
    onclick={`{
      const x = document.getElementById("lightModeDetection");
      if (x) {
        if (x.style.display === "none") {
          x.style.display = "flex";
        } else {
          x.style.display = "none";
        }
      } else {
        return;
      }
    }`}
  >
    x
  </button>
</div>
